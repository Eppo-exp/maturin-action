{
  "name": "maturin-action",
  "version": "1.6.2",
  "description": "GitHub Action to install and run a custom maturin command",
  "main": "index.ts",
  "scripts": {
    "build": "ncc build index.ts -o dist --minify",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts",
    "all": "npm run format && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/messense/maturin-action.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/messense/maturin-action/issues"
  },
  "homepage": "https://github.com/messense/maturin-action#readme",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/exec": "^1.0.4",
    "@actions/http-client": "^1.0.11",
    "@actions/io": "^1.1.0",
    "@actions/tool-cache": "^1.6.1",
    "string-argv": "^0.3.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/node": "^15.0.1",
    "@typescript-eslint/parser": "^4.22.1",
    "@vercel/ncc": "^0.28.5",
    "eslint": "^7.25.0",
    "eslint-plugin-github": "^4.1.3",
    "prettier": "^2.2.1"
  }
}
